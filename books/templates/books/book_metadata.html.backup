{% extends 'books/base.html' %}
{% load crispy_forms_tags %}
{% load static %}
{% load book_extras %}
{% load custom_filters %}
{% load language_tags %}

{% block title %}{{ book.filename }} - Ebook Library Manager{% endblock %}

{% block extra_css %}
<style>
    .nav-tabs .nav-link {
        color: #6c757d;
    }
    .nav-tabs .nav-link.active {
        font-weight: bold;
    }
    .tab-content {
        border: 1px solid #dee2e6;
        border-top: none;
        padding: 1.5rem;
        background-color: #fff;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-book-reader text-primary me-2"></i>
                    Metadata & Processing
                </h1>
                <div class="d-flex gap-2">
                    <div class="badge bg-{{ book.finalmetadata.is_reviewed|yesno:'success,warning' }} fs-6">
                        <i class="fas fa-{{ book.finalmetadata.is_reviewed|yesno:'check-circle,exclamation-triangle' }} me-1"></i>
                        {{ book.finalmetadata.is_reviewed|yesno:'Reviewed,Needs Review' }}
                    </div>
                    {% if workflow_mode %}
                    <div class="badge bg-info fs-6">
                        <i class="fas fa-stream me-1"></i>
                        Workflow Mode
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <form method="post" action="{% url 'books:book_metadata_update' book.id %}" enctype="multipart/form-data" id="metadataForm">
        {% csrf_token %}
        <input type="hidden" name="book_id" value="{{ book.id }}">

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" id="metadataTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="metadata-tab" data-bs-toggle="tab" data-bs-target="#metadata" type="button" role="tab">
                    <i class="fas fa-tags me-1"></i> Metadata Review
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="covers-tab" data-bs-toggle="tab" data-bs-target="#covers" type="button" role="tab">
                    <i class="fas fa-images me-1"></i> Covers <span class="badge bg-secondary">{{ covers|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="fileops-tab" data-bs-toggle="tab" data-bs-target="#fileops" type="button" role="tab">
                    <i class="fas fa-folder-open me-1"></i> File Operations
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="duplicates-tab" data-bs-toggle="tab" data-bs-target="#duplicates" type="button" role="tab">
                    <i class="fas fa-clone me-1"></i> Duplicates
                    {% if duplicates %}
                    <span class="badge bg-warning">{{ duplicates|length }}</span>
                    {% endif %}
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="metadataTabContent">
            <!-- Metadata Review Tab -->
            <div class="tab-pane fade show active" id="metadata" role="tabpanel">
                {% include 'books/partials/_metadata_radio_fields.html' with readonly=False %}
            </div>

            <!-- Covers Tab -->
            <div class="tab-pane fade" id="covers" role="tabpanel">
                {% include 'books/partials/_cover_selection_grid.html' %}
            </div>

            <!-- File Operations Tab -->
            <div class="tab-pane fade" id="fileops" role="tabpanel">
                {% include 'books/partials/_file_operations_panel.html' %}
            </div>

            <!-- Duplicates Tab -->
            <div class="tab-pane fade" id="duplicates" role="tabpanel">
                {% include 'books/partials/_duplicate_detection.html' %}
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="card mt-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group" role="group">
                        {% if workflow_mode %}
                            {% if prev_book %}
                            <a href="{% url 'books:book_metadata' prev_book.id %}?workflow=1" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Previous
                            </a>
                            {% endif %}
                            <button type="submit" name="action" value="skip" class="btn btn-warning">
                                <i class="fas fa-forward me-1"></i> Skip
                            </button>
                            <button type="submit" name="action" value="save_next" class="btn btn-success">
                                <i class="fas fa-check me-1"></i> Save & Next
                            </button>
                        {% else %}
                            <button type="submit" name="action" value="save" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        {% endif %}
                    </div>

                    <div class="btn-group" role="group">
                        <button type="submit" name="action" value="delete" class="btn btn-outline-danger" 
                                onclick="return confirm('Are you sure you want to delete this book and its files?');">
                            <i class="fas fa-trash me-1"></i> Delete Book
                        </button>
                        <a href="{% url 'books:book_detail' book.id %}" class="btn btn-outline-secondary">
                            <i class="fas fa-eye me-1"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Rescan Section (Outside Form) -->
    <div class="card mt-3">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-sync-alt text-info me-2"></i>
                Rescan Metadata
            </h5>
        </div>
        <div class="card-body">
            <form method="post" action="{% url 'books:rescan_external_metadata' book.id %}" class="row g-3">
                {% csrf_token %}
                
                <div class="col-md-12">
                    <label class="form-label">Select Sources to Query:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="sources" value="google" id="source_google" checked>
                        <label class="form-check-label" for="source_google">
                            Google Books
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="sources" value="openlibrary" id="source_openlibrary" checked>
                        <label class="form-check-label" for="source_openlibrary">
                            Open Library
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="sources" value="goodreads" id="source_goodreads">
                        <label class="form-check-label" for="source_goodreads">
                            Goodreads
                        </label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="clear_existing" id="clear_existing" value="true">
                        <label class="form-check-label" for="clear_existing">
                            Clear existing external metadata before rescanning
                        </label>
                    </div>
                </div>

                <div class="col-md-12">
                    <button type="submit" class="btn btn-info">
                        <i class="fas fa-sync-alt me-1"></i>
                        Rescan External Sources
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
{% endblock %}

{% block extra_js %}
<script src="{% static 'books/js/metadata_enhanced.js' %}"></script>
<script>
    // Initialize tabs from URL hash
    $(document).ready(function() {
        var hash = window.location.hash;
        if (hash) {
            $('.nav-tabs a[href="' + hash + '"]').tab('show');
        }
        
        // Update URL hash when tab is changed
        $('a[data-bs-toggle="tab"]').on('shown.bs.tab', function(e) {
            window.location.hash = e.target.hash;
        });
    });
</script>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-book-reader text-primary me-2"></i>
                    Metadata Review
                </h1>
                <div class="badge bg-{{ book.finalmetadata.is_reviewed|yesno:'success,warning' }} fs-6">
                    <i class="fas fa-{{ book.finalmetadata.is_reviewed|yesno:'check-circle,exclamation-triangle' }} me-1"></i>
                    {{ book.finalmetadata.is_reviewed|yesno:'Reviewed,Needs Review' }}
                </div>
            </div>
        </div>
    </div>

    <form method="post" action="{% url 'books:book_metadata_update' book.id %}" enctype="multipart/form-data" class="mb-3">
        {% csrf_token %}

        <!-- Metadata Overview Section -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle text-info me-2"></i>
                    Book Overview
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Title -->
                        {% if book.finalmetadata.final_title %}
                        <div class="mb-2">
                            <i class="fas fa-heading me-2 text-muted"></i>
                            <strong>Title:</strong>
                            {{ book.finalmetadata.final_title }}
                        </div>
                        {% endif %}
                        
                        <!-- Author -->
                        {% if book.finalmetadata.final_author %}
                        <div class="mb-2">
                            <i class="fas fa-user me-2 text-muted"></i>
                            <strong>Author:</strong>
                            {{ book.finalmetadata.final_author }}
                        </div>
                        {% endif %}
                        
                        <!-- Publisher -->
                        {% if book.finalmetadata.final_publisher %}
                        <div class="mb-2">
                            <i class="fas fa-building me-2 text-muted"></i>
                            <strong>Publisher:</strong>
                            {{ book.finalmetadata.final_publisher }}
                        </div>
                        {% endif %}
                        
                        <!-- Year -->
                        {% if book.finalmetadata.publication_year %}
                        <div class="mb-2">
                            <i class="fas fa-calendar me-2 text-muted"></i>
                            <strong>Year:</strong>
                            {{ book.finalmetadata.publication_year }}
                        </div>
                        {% endif %}
                        
                        <!-- ISBN -->
                        {% if book.finalmetadata.isbn %}
                        <div class="mb-2">
                            <i class="fas fa-barcode me-2 text-muted"></i>
                            <strong>ISBN:</strong>
                            <code class="small">{{ book.finalmetadata.isbn }}</code>
                        </div>
                        {% endif %}
                        
                        <!-- Series -->
                        {% if book.finalmetadata.final_series %}
                        <div class="mb-2">
                            <i class="fas fa-list-ol me-2 text-muted"></i>
                            <strong>Series:</strong>
                            {{ book.finalmetadata.final_series }}
                            {% if book.finalmetadata.final_series_number %}
                            <i class="fas fa-hashtag ms-2 me-1 text-muted"></i>{{ book.finalmetadata.final_series_number }}
                            {% endif %}
                        </div>
                        {% endif %}
                        
                        <!-- Genres -->
                        {% if book.genre_relationships.all %}
                        <div class="mb-2">
                            <i class="fas fa-tags me-2 text-muted"></i>
                            <strong>Genres:</strong>
                            {% for genre_rel in book.genre_relationships.all|slice:":5" %}
                                <span class="badge bg-info text-dark me-1">{{ genre_rel.genre.name }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                    
                    <div class="col-md-6">
                        <!-- Content Type -->
                        <div class="mb-2">
                            <i class="fas fa-book me-2 text-muted"></i>
                            <strong>Type:</strong>
                            <span class="badge bg-primary">eBook</span>
                        </div>
                        
                        <!-- Review Status -->
                        <div class="mb-2">
                            <i class="fas fa-flag me-2 text-muted"></i>
                            <strong>Review Status:</strong>
                            <span class="badge bg-{{ book.finalmetadata.is_reviewed|yesno:'success,warning' }}">
                                {{ book.finalmetadata.is_reviewed|yesno:'Reviewed,Needs Review' }}
                            </span>
                        </div>
                        
                        <!-- Reading Status -->
                        <div class="mb-2">
                            <i class="fas fa-book-reader me-2 text-muted"></i>
                            <strong>Reading Status:</strong>
                            {% if book.is_read %}
                                <span class="badge bg-success">Read</span>
                            {% elif book.reading_progress > 0 %}
                                <span class="badge bg-warning">Reading ({{ book.reading_progress }}%)</span>
                            {% else %}
                                <span class="badge bg-secondary">Unread</span>
                            {% endif %}
                        </div>
                        
                        <!-- File Information -->
                        <div class="mb-3 mt-3">
                            <div class="border-top pt-3">
                                <h6 class="mb-2">
                                    <i class="fas fa-folder-open me-2 text-muted"></i>
                                    File Information
                                </h6>
                                <div class="mb-2">
                                    <i class="fas fa-file me-2 text-muted"></i>
                                    <strong>Filename:</strong>
                                    <code class="small">{{ book.filename }}</code>
                                </div>
                                <div class="mb-2">
                                    <span class="badge {{ book.file_format|format_color }} ms-2">{{ book.file_format|upper|default:"Unknown" }}</span>
                                    <span class="badge bg-secondary ms-1">{{ book.file_size|filesizeformat }}</span>
                                    {% if book.finalmetadata.language %}
                                    <span class="badge bg-secondary ms-1">{{ book.finalmetadata.language|language_name }}</span>
                                    {% endif %}
                                </div>
                                {% if book.scan_folder %}
                                <div class="mb-2">
                                    <i class="fas fa-hdd me-2 text-muted"></i>
                                    <strong>Scan Folder:</strong>
                                    <a href="{% url 'books:edit_scan_folder' book.scan_folder.id %}" class="text-decoration-none">{{ book.scan_folder.name }}</a>
                                </div>
                                {% endif %}
                                <div class="mb-2">
                                    <i class="fas fa-folder me-2 text-muted"></i>
                                    <strong>Path:</strong>
                                    <code class="small text-muted">{{ book.file_path }}</code>
                                </div>
                                {% if book.last_scanned %}
                                <div class="mb-2">
                                    <i class="fas fa-clock me-2 text-muted"></i>
                                    <strong>Last Scanned:</strong>
                                    {{ book.last_scanned|date:"M d, Y" }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- Quality Metrics -->
                        <div class="mb-2">
                            <strong>Confidence:</strong>
                            <span class="badge {% if book.finalmetadata.overall_confidence >= 0.8 %}bg-success{% elif book.finalmetadata.overall_confidence >= 0.5 %}bg-warning{% else %}bg-danger{% endif %}">
                                {{ book.finalmetadata.overall_confidence|mul:100|floatformat:0 }}%
                            </span>
                        </div>
                        <div class="mb-2">
                            <strong>Completeness:</strong>
                            <span class="badge {% if book.finalmetadata.completeness_score >= 0.8 %}bg-success{% elif book.finalmetadata.completeness_score >= 0.5 %}bg-warning{% else %}bg-danger{% endif %}">
                                {{ book.finalmetadata.completeness_score|mul:100|floatformat:0 }}%
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- Description -->
                {% if book.finalmetadata.description %}
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="border-top pt-3">
                            <div class="mb-2">
                                <i class="fas fa-align-left me-2 text-muted"></i>
                                <strong>Description:</strong>
                            </div>
                            <div class="text-muted">
                                {{ book.finalmetadata.description|truncatewords:100 }}
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Cover Section -->
        <div class="card mb-4 shadow-sm cover-section">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-image text-success me-2"></i>
                    Book Cover
                </h5>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-action="reset-cover">
                    <i class="fas fa-undo me-1"></i>Reset to Final
                </button>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Original Cover -->
                    {% if book.cover_path %}
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                        <div class="card h-100 border-2 {% if book.cover_path == book.finalmetadata.final_cover_path %}border-primary{% else %}border-light{% endif %}">
                            {% book_cover book "medium" %}
                            <div class="card-body p-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="final_cover_path" 
                                           value="{{ book.cover_path }}" id="cover_original"
                                           {% if book.cover_path == book.finalmetadata.final_cover_path %}checked{% endif %}>
                                    <label class="form-check-label fw-bold" for="cover_original">
                                        Original Scan
                                        {% if book.cover_path == book.finalmetadata.final_cover_path %}
                                        <span class="badge bg-primary ms-1">Final</span>
                                        {% endif %}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Metadata Covers -->
                    {% for cover in all_covers %}
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                        <div class="card h-100 border-2 {% if cover.cover_path == book.finalmetadata.final_cover_path %}border-primary{% else %}border-light{% endif %}">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                                <div class="text-center mb-3">
                                    {% book_cover_from_metadata cover book "medium" %}
                                </div>
                                <div class="w-100 d-flex flex-column align-items-center">
                                    <div class="form-check text-center">
                                        <input class="form-check-input" type="radio" name="final_cover_path" 
                                               value="{{ cover.cover_path }}" id="cover_{{ forloop.counter }}"
                                               aria-describedby="cover_{{ forloop.counter }}_desc"
                                               {% if cover.cover_path == book.finalmetadata.final_cover_path %}checked{% endif %}>
                                        <label class="form-check-label fw-bold text-center d-block" for="cover_{{ forloop.counter }}">
                                            <div class="mb-2">{{ cover.source.name }}</div>
                                        </label>
                                    </div>
                                    <div class="text-center w-100">
                                        <div class="d-flex justify-content-center align-items-center flex-wrap gap-1">
                                            <span class="badge 
                                                {% if cover.confidence >= 0.8 %}bg-success{% elif cover.confidence >= 0.5 %}bg-warning text-dark{% else %}bg-danger{% endif %}"
                                                aria-label="{% if cover.confidence >= 0.8 %}High{% elif cover.confidence >= 0.5 %}Medium{% else %}Low{% endif %} confidence: {{ cover.confidence|floatformat:2 }}">
                                                <i class="fas fa-star me-1" aria-hidden="true"></i>{{ cover.confidence|floatformat:2 }}
                                            </span>
                                            {% if cover.cover_path == book.finalmetadata.final_cover_path %}
                                                <span class="badge bg-primary" aria-label="Selected as final cover">Final</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% empty %}
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No metadata covers available for this book.
                        </div>
                    </div>
                    {% endfor %}

                    <!-- Upload Custom Cover -->
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                        <div class="card h-100 border-2 border-dashed border-secondary" id="uploadCoverCard">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center" id="uploadCoverBody">
                                <i class="fas fa-upload fa-3x text-muted mb-3"></i>
                                <div class="mb-3 text-center">
                                    <label for="cover_upload" class="form-label fw-bold">Upload Custom Cover</label>
                                    <input type="file" class="form-control" id="cover_upload" name="cover_upload" 
                                           accept="image/*" data-action="upload-cover-immediate">
                                    <div class="form-text">JPG, PNG, GIF, WebP (max 5MB)</div>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="final_cover_path" 
                                           value="custom_upload" id="cover_custom">
                                    <label class="form-check-label" for="cover_custom">
                                        Use uploaded cover
                                    </label>
                                </div>
                            </div>
                            <!-- Progress bar for upload -->
                            <div class="progress d-none" id="uploadProgress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated progress-bar-width-0" 
                                     role="progressbar" aria-label="Cover upload progress" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Title Section -->
        <fieldset class="card mb-4 shadow-sm" aria-labelledby="titleLegend">
            <legend id="titleLegend" class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-heading text-primary me-2"></i>
                    Book Title
                </h5>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-action="reset-title">
                    <i class="fas fa-undo me-1"></i>Reset to Final
                </button>
            </legend>
            <div class="card-body">
                {% for title in all_titles %}
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="final_title" 
                           value="{{ title.title }}" id="title_{{ forloop.counter }}"
                           aria-describedby="title_{{ forloop.counter }}_desc"
                           {% if title.title == book.finalmetadata.final_title %}checked{% endif %}>
                    <label class="form-check-label d-flex justify-content-between align-items-start" for="title_{{ forloop.counter }}">
                        <span class="fw-bold">{{ title.title }}</span>
                        <div>
                            <span class="badge bg-light text-dark me-2" aria-label="Source: {{ title.source.name }}">
                                <i class="fas {{ title.source.name|source_icon }} me-1" aria-hidden="true"></i>{{ title.source.name }}
                            </span>
                            
                            <span class="badge 
                                {% if title.confidence >= 0.8 %}bg-success{% elif title.confidence >= 0.5 %}bg-warning text-dark{% else %}bg-danger{% endif %}"
                                aria-label="{% if title.confidence >= 0.8 %}High{% elif title.confidence >= 0.5 %}Medium{% else %}Low{% endif %} confidence: {{ title.confidence|floatformat:2 }}">
                                <i class="fas fa-star me-1" aria-hidden="true"></i>{{ title.confidence|floatformat:2 }}
                            </span>
                            
                            {% if title.title == book.finalmetadata.final_title %}
                                <span class="badge bg-primary ms-1" aria-label="Selected as final title">Final</span>
                            {% endif %}
                        </div>
                    </label>
                </div>
                {% endfor %}
                <div class="mt-3">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="final_title" 
                               value="__manual__" id="title_manual">
                        <label class="form-check-label fw-bold" for="title_manual">
                            <i class="fas fa-edit me-1"></i>Manual Entry
                        </label>
                    </div>
                    <input type="text" name="manual_title" id="title_override" 
                           placeholder="Enter custom title..." class="form-control">
                </div>
            </div>
        </fieldset>

        <!-- Author Section -->
        <fieldset class="card mb-4 shadow-sm" aria-labelledby="authorLegend">
            <legend id="authorLegend" class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-edit text-info me-2"></i>
                    Author
                </h5>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-action="reset-author">
                    <i class="fas fa-undo me-1"></i>Reset to Final
                </button>
            </legend>
            <div class="card-body">
                {% for author in all_authors %}
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="final_author" 
                           value="{{ author.author.name }}" id="author_{{ forloop.counter }}"
                           aria-describedby="author_{{ forloop.counter }}_desc"
