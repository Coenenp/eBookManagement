                        <div>
                            <span class="badge bg-light text-dark me-1" aria-label="Source: {{ genre.source.name }}">
                                <i class="fas {{ genre.source.name|source_icon }} me-1" aria-hidden="true"></i>{{ genre.source.name }}
                            </span>
                            
